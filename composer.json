{
    "name": "lukaszzychal/tvmaze-client-php",
    "type": "library",
    "description": "PSR-18 PHP client for the TVMaze API (shows, people, schedules, episodes, cast)",
    "keywords": ["tvmaze", "api", "tv", "shows", "episodes", "psr-18", "http-client"],
    "license": "MIT",
    "authors": [
        {
            "name": "≈Åukasz Zychal",
            "email": "lukasz@zychal.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0",
        "guzzlehttp/guzzle": "^7.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7",
        "friendsofphp/php-cs-fixer": "^3.15"
    },
    "autoload": {
        "psr-4": {
            "TVMaze\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TVMaze\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse",
        "cs-check": "php-cs-fixer fix --dry-run --verbose",
        "cs-fix": "php-cs-fixer fix",
        "quality": [
            "@cs-check",
            "@phpstan",
            "@test"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        },
        "platform": {
            "php": "8.4.0"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
